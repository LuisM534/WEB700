<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Add Set</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">
</head>
<body>

  <%- include('partials/navbar', { page: '/lego/addSet' }) %>

  <main class="container py-5">
    <section class="p-4 bg-white rounded-3 shadow">

      <h1 class="mb-4">Add Set</h1>
      <p class="text-muted">Use the form below to add a new LEGO set to the collection.</p>

      <form method="POST" action="/lego/addSet" class="row g-3">

        <!-- Name -->
        <div class="col-md-6">
          <label class="form-label">Name</label>
          <input name="name" type="text" class="form-control" required>
        </div>

        <!-- Year -->
        <div class="col-md-3">
          <label class="form-label">Year</label>
          <input name="year" type="number" class="form-control" required>
        </div>

        <!-- Parts -->
        <div class="col-md-3">
          <label class="form-label">Number of Parts</label>
          <input name="num_parts" type="number" class="form-control" required>
        </div>

        <!-- Image URL -->
        <div class="col-md-12">
          <label class="form-label">Image URL</label>
          <input name="img_url" type="url" class="form-control" required>
        </div>

        <!-- Theme -->
        <div class="col-md-6">
          <label class="form-label">Theme</label>
          <select name="theme_id" class="form-select" required>
            <option value="">-- Select Theme --</option>

            <% themes.forEach(theme => { %>
              <option value="<%= theme.id %>"><%= theme.name %></option>
            <% }) %>

          </select>
        </div>

        <!-- Set Number -->
        <div class="col-md-6">
          <label class="form-label">Set Number</label>
          <input name="set_num" type="text" class="form-control" required>
        </div>

        <!-- Submit -->
        <div class="col-12 pt-3">
          <button type="submit" class="btn btn-primary">Add Set</button>
          <a href="/lego/sets" class="btn btn-outline-secondary">Cancel</a>
        </div>

      </form>
    </section>
  </main>

</body>
</html>
