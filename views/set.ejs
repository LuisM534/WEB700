********************************************************************************/<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= set.name %></title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">
</head>
<body>

  <%- include('partials/navbar', { page: '' }) %>

  <main class="container py-5">
    <section class="p-4 bg-white rounded-3 shadow">

      <h1 class="mb-3"><%= set.name %></h1>
      <p class="text-muted">
        Below you will find detailed information about this LEGO set.
      </p>

      <div class="row mt-4">
        
        <!-- IMAGE -->
        <div class="col-md-5">
          <div class="rounded mb-3" 
               style="width: 100%; height: 18rem; 
               background-image: url('<%= set.img_url %>');
               background-size: cover;
               background-position: center;">
          </div>
        </div>

    
        <div class="col-md-7">
          <ul class="list-group mb-3">
            <li class="list-group-item"><strong>Set Number:</strong> <%= set.set_num %></li>
            <li class="list-group-item"><strong>Name:</strong> <%= set.name %></li>
            <li class="list-group-item"><strong>Theme:</strong> <%= set.theme %></li>
            <li class="list-group-item"><strong>Year:</strong> <%= set.year %></li>
            <li class="list-group-item"><strong>Parts:</strong> <%= set.num_parts %></li>
          </ul>

        
          <a href="/lego/deleteSet/<%= set.set_num %>" 
             class="btn btn-danger me-2">
            Delete Set
          </a>

          <a href="#" onclick="history.back(); return false;" 
             class="btn btn-secondary">
            Go Back
          </a>
        </div>
      </div>

    </section>
  </main>

</body>
</html>
